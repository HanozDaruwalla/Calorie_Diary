<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme (common for all API levels) -->
    <style name="Base.Theme.CalorieDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Default status bar color (used below API 23) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Main app theme -->
    <style name="Theme.CalorieDiary" parent="Base.Theme.CalorieDiary" />

    <!-- Optional overlays (keep these if you use Toolbars/Popups) -->
    <style name="Theme.CalorieDiary.NoActionBar" parent="Theme.CalorieDiary">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CalorieDiary.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="Theme.CalorieDiary.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

</resources>